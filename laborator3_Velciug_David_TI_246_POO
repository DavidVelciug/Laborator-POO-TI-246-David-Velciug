
#include <cassert>
#include <iostream>
#include <sstream>
#include <stdexcept>

class DoublyLinkedList {
private:
    struct Node {
        int data;
        Node* prev;
        Node* next;
        
        Node(int value) : data(value), prev(nullptr), next(nullptr) {
            std::cout << "// Создан узел со значением: " << value << std::endl;
        }
        
        ~Node() {
            std::cout << "// Удален узел со значением: " << data << std::endl;
        }
    };
    
    Node* head;
    Node* tail;
    size_t list_size;

public:
    // Конструктор по умолчанию
    DoublyLinkedList() : head(nullptr), tail(nullptr), list_size(0) {
        std::cout << "// Конструктор по умолчанию" << std::endl;
    }
    
    // Конструктор с размером
    DoublyLinkedList(size_t size) : head(nullptr), tail(nullptr), list_size(0) {
        std::cout << "// Конструктор с размером: " << size << std::endl;
        for (size_t i = 0; i < size; ++i) {
            push_back(0);
        }
    }
    
    // Конструктор из массива
    DoublyLinkedList(const int array[], size_t size) : head(nullptr), tail(nullptr), list_size(0) {
        std::cout << "// Конструктор из массива, размер: " << size << std::endl;
        for (size_t i = 0; i < size; ++i) {
            push_back(array[i]);
        }
    }
    
    // Конструктор копирования
    DoublyLinkedList(const DoublyLinkedList& other) : head(nullptr), tail(nullptr), list_size(0) {
        std::cout << "// Конструктор копирования" << std::endl;
        Node* current = other.head;
        while (current != nullptr) {
            push_back(current->data);
            current = current->next;
        }
    }
    
    // Конструктор перемещения
    DoublyLinkedList(DoublyLinkedList&& other) noexcept 
        : head(other.head), tail(other.tail), list_size(other.list_size) {
        std::cout << "// Конструктор перемещения" << std::endl;
        other.head = nullptr;
        other.tail = nullptr;
        other.list_size = 0;
    }
    
    // Деструктор
    ~DoublyLinkedList() {
        std::cout << "// Деструктор, размер списка: " << list_size << std::endl;
        clear();
    }
    
    // Очистка списка
    void clear() {
        std::cout << "// Метод clear()" << std::endl;
        while (head != nullptr) {
            Node* temp = head;
            head = head->next;
            delete temp;
        }
        tail = nullptr;
        list_size = 0;
    }
    
    // Доступ к элементу по индексу
    int at(int index) {
        std::cout << "// Метод at() с индексом: " << index << std::endl;
        
        if (empty()) {
            throw std::out_of_range("Список пуст");
        }
        
        // Обработка отрицательных индексов
        if (index < 0) {
            index = list_size + index;
        }
        
        // Проверка границ
        if (index < 0) {
            return head->data;
        }
        if (index >= static_cast<int>(list_size)) {
            return tail->data;
        }
        
        // Поиск элемента
        Node* current = head;
        for (int i = 0; i < index && current != nullptr; ++i) {
            current = current->next;
        }
        
        return current->data;
    }
    
    // Изменение размера
    void resize(size_t new_size) {
        std::cout << "// Метод resize() с " << list_size << " на " << new_size << std::endl;
        
        if (new_size < list_size) {
            // Удаляем лишние элементы с конца
            while (list_size > new_size) {
                pop_back();
            }
        } else if (new_size > list_size) {
            // Добавляем новые элементы с значением 0
            while (list_size < new_size) {
                push_back(0);
            }
        }
    }
    
    // Заполнение списка
    void assign(size_t count, int value) {
        std::cout << "// Метод assign() количество: " << count << ", значение: " << value << std::endl;
        
        clear();
        for (size_t i = 0; i < count; ++i) {
            push_back(value);
        }
    }
    
    // Проверка на пустоту
    bool empty() const {
        return list_size == 0;
    }
    
    // Обмен содержимым
    void swap(DoublyLinkedList& other) {
        std::cout << "// Метод swap()" << std::endl;
        
        std::swap(head, other.head);
        std::swap(tail, other.tail);
        std::swap(list_size, other.list_size);
    }
    
    // Размер списка
    size_t size() const {
        return list_size;
    }
    
    // Статический метод сравнения
    static bool is_equal(const DoublyLinkedList& list1, const DoublyLinkedList& list2) {
        std::cout << "// Статический метод is_equal()" << std::endl;
        
        if (list1.list_size != list2.list_size) {
            return false;
        }
        
        Node* current1 = list1.head;
        Node* current2 = list2.head;
        
        while (current1 != nullptr && current2 != nullptr) {
            if (current1->data != current2->data) {
                return false;
            }
            current1 = current1->next;
            current2 = current2->next;
        }
        
        return true;
    }

    // НОВЫЕ ОПЕРАТОРЫ И МЕТОДЫ ДЛЯ ЛАБОРАТОРНОЙ 3
    
    // Оператор присваивания
    DoublyLinkedList& operator=(const DoublyLinkedList& other) {
        std::cout << "// Оператор присваивания =" << std::endl;
        if (this != &other) {
            clear();
            Node* current = other.head;
            while (current != nullptr) {
                push_back(current->data);
                current = current->next;
            }
        }
        return *this;
    }
    
    // Операторы сравнения
    friend bool operator==(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения ==" << std::endl;
        return DoublyLinkedList::is_equal(lhs, rhs);
    }
    
    friend bool operator!=(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения !=" << std::endl;
        return !(lhs == rhs);
    }
    
    friend bool operator<(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения <" << std::endl;
        Node* current1 = lhs.head;
        Node* current2 = rhs.head;
        
        while (current1 != nullptr && current2 != nullptr) {
            if (current1->data < current2->data) {
                return true;
            } else if (current1->data > current2->data) {
                return false;
            }
            current1 = current1->next;
            current2 = current2->next;
        }
        
        return lhs.list_size < rhs.list_size;
    }
    
    friend bool operator>(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения >" << std::endl;
        return rhs < lhs;
    }
    
    friend bool operator<=(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения <=" << std::endl;
        return !(lhs > rhs);
    }
    
    friend bool operator>=(const DoublyLinkedList& lhs, const DoublyLinkedList& rhs) {
        std::cout << "// Оператор сравнения >=" << std::endl;
        return !(lhs < rhs);
    }
    
    // Оператор доступа по индексу
    int& operator[](size_t index) {
        std::cout << "// Оператор [] с индексом: " << index << std::endl;
        if (index >= list_size) {
            throw std::out_of_range("Индекс вне диапазона");
        }
        
        Node* current = head;
        for (size_t i = 0; i < index && current != nullptr; ++i) {
            current = current->next;
        }
        
        return current->data;
    }
    
    // Операторы ввода/вывода
    friend std::ostream& operator<<(std::ostream& os, const DoublyLinkedList& list) {
        std::cout << "// Оператор вывода <<" << std::endl;
        Node* current = list.head;
        os << "[";
        while (current != nullptr) {
            os << current->data;
            if (current->next != nullptr) {
                os << " ";
            }
            current = current->next;
        }
        os << "]";
        return os;
    }
    
    friend std::istream& operator>>(std::istream& is, DoublyLinkedList& list) {
        std::cout << "// Оператор ввода >>" << std::endl;
        list.clear();
        int value;
        while (is >> value) {
            list.push_back(value);
        }
        return is;
    }
    
    // Проверка наличия элемента
    bool contains(int value) {
        std::cout << "// Метод contains() значение: " << value << std::endl;
        Node* current = head;
        while (current != nullptr) {
            if (current->data == value) {
                return true;
            }
            current = current->next;
        }
        return false;
    }
    
    // Подсчет количества элементов
    size_t count(int value) {
        std::cout << "// Метод count() значение: " << value << std::endl;
        size_t counter = 0;
        Node* current = head;
        while (current != nullptr) {
            if (current->data == value) {
                counter++;
            }
            current = current->next;
        }
        return counter;
    }

private:
    // вспомогательные методы
    void push_back(int value) {
        Node* new_node = new Node(value);
        
        if (tail == nullptr) {
            head = tail = new_node;
        } else {
            tail->next = new_node;
            new_node->prev = tail;
            tail = new_node;
        }
        list_size++;
    }
    
    void pop_back() {
        if (tail == nullptr) return;
        
        Node* temp = tail;
        if (tail->prev != nullptr) {
            tail = tail->prev;
            tail->next = nullptr;
        } else {
            head = tail = nullptr;
        }
        
        delete temp;
        list_size--;
    }
};

// код для проверки правильности выполнения задания:
int main(int argc, char const *argv[]) {
    //вариант 4 Двухсвязный список
    std::cout << "НАЧАЛО ТЕСТИРОВАНИЯ " << std::endl;
    
    std::stringstream ss{"1 3 5 7 9"};
    DoublyLinkedList a(5);
    ss >> a;
    assert(5 == a.size());
    assert(1 == a[0]);
    assert(9 == a[4]);
    std::cout << a << std::endl;
    
    DoublyLinkedList b{a};
    assert(a == b);
    assert(3 == b[1]);
    assert(7 == b[3]);
    
    b[4] = 0;
    assert(0 == b[4]);
    assert(!b.contains(9));
    assert(b < a);
    assert(a > b);
    std::cout << b << std::endl;
    
    DoublyLinkedList c;
    assert(0 == c.size());
    c = b;
    assert(b == c);
    
    c[1] = c[2] = 7;
    assert(7 == c[1]);
    assert(7 == c[2]);
    assert(3 == c.count(7));
    std::cout << c << std::endl;
    
    std::cout << "ТЕСТИРОВАНИЕ ЗАВЕРШЕНО" << std::endl;
}
